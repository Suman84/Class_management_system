<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminRecordsActivity">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="638dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_addteacher"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="View Attendences"
                android:textColor="#ffff"
                android:background="@drawable/button_rounded"
                android:layout_marginBottom="20dp"
                />
            <Button
                android:id="@+id/button_addadmin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Reset Attendence"
                android:textColor="#ffff"
                android:background="@drawable/button_rounded"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/button_deleteteacher"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Delete Notices"
                android:textColor="#ffff"
                android:background="@drawable/button_rounded"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/button_deletestudent"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Delete Marks"
                android:textColor="#ffff"
                android:background="@drawable/button_rounded"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/button_deletethisaccount"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Delete Chats"
                android:textColor="#ffff"
                android:background="@drawable/button_rounded"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Delete everything"
                android:textColor="#ffff"
                android:background="@drawable/button_rounded"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>