<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainPDFActivity">

    <ImageView
        android:layout_width="182dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:src="@drawable/pdflogo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Assignment"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/txt_pdfName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Type in the assignment or title"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_attach_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:text="+ Attach a pdf"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="Upload"
        android:textColor="#ffff"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_rounded"
        android:onClick="btn_action"
        android:text="View Assignments"
        android:textColor="#ffff"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_viewPosted_assessments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_rounded"
        android:text="View Submitted Assignments"
        android:textColor="#ffff"
        android:textSize="20sp" />


</LinearLayout>